<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gatherly</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/javascript/script.js" defer></script>
  </head>
  <body>
    <header class="primary-header">
      <div class="container">
        <div class="nav-wrapper">
          <a href="/"
            ><img class="logo" src="/assets/images/logo-no-background.png" alt=""
          /></a>
          <button class="mobile-nav-toggle">
            <img
              class="hamburger-icon"
              src="assets/svg/hamburger-icon.svg"
              alt=""
            />
            <img class="close-icon" src="/assets/svg/close-icon.svg" alt="" />
          </button>
          <nav class="primary-navigation" id="primary-navigation">
            <ul class="nav-list">
              <li><a href="/">Home</a></li>
              <li><a href="/events/new">Create Event</a></li>
              <li><a href="/events">Events</a></li>
              <%if(user) {%>
              <li><a href="/users/profile">Profile</a></li>
              <%}%>
            </ul>
          </nav>
          <%if(!user) {%>
          <a href="/users/login">
          <button class="button display-sm-none display-md-inline-flex">
             Sign In
          </button>
        </a>
        <%} else {%>
          <a href="/users/logout">
            <button class="button display-sm-none display-md-inline-flex">
               Logout
            </button>
          </a>
          <%}%>
        </div>
      </div>
    </header>
    <% if(errorMessages.length > 0) {%>
      <% errorMessages.forEach(message=>{%>
          <div class='error'>
              <%=message%>
          </div>
          <%});%>
              <%}%>
  
                  <% if(successMessages.length > 0) {%>
  
                      <% successMessages.forEach(message=>{%>
                          <div class='success'>
                              <%=message%>
                          </div>
                          <%});%>
                              <%}%>