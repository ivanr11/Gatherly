<%- include('../partials/header.ejs')%>
    <main>
      <div class="container">
        <form method="POST" action="/events/<%=event.id%>?_method=PUT">
          <div class="mb-400 mt-400">
            <label for="category" class="form-label">Category</label>
            <select id="category" name="category" class="form-control">
              <option value="<%=event.category%>" disabled selected>--Select a Category--</option>
              <option value="food" name="food">Food</option>
              <option value="sports" name="sports">Sports</option>
            </select>
          </div>
          <div class="mb-400 mt-400">
            <label for="title" class="form-label">Title</label>
            <input
              id="title"
              name="title"
              value="<%=event.title%>"
              type="text"
              class="form-control"
              placeholder="title"
            />
          </div>

          <div class="mb-400 mt-400">
            <label for="details" class="form-label">Details</label>
            <textarea
              id="details"
              name="details"
              value="<%=event.details%>"
              cols="30"
              rows="2"
              class="form-control"
              placeholder="description"
            ><%=event.details%></textarea>
          </div>

          <div class="mb-400 mt-400">
            <label for="where" class="form-label">Where</label>
            <input
              id="location"
              name="location"
              value="<%=event.location%>"
              type="text"
              class="form-control"
              placeholder="location"
            />
          </div>

          <div class="mb-400 mt-400">
            <label for="start" class="form-label">Start</label>
            <input id="start" name="start" value="<%=event.start%>" type="date" class="form-control" />
          </div>

          <!-- <div class="mb-400 mt-400">
            <label for="end" class="form-label">End</label>
            <input id="end" name="end" value="<%=event.end%>" type="date" class="form-control" />
          </div> -->

          <!-- <div class="mb-400 mt-400">
            <label for="image" class="form-label">Image</label>
            <input id="image" name="image" type="file" class="form-control" />
          </div> -->

          <div class="center-event-submit">
            <button type="submit" class="button event-submit-button" value="Submit">
              Submit
            </button>
          </div>
        </form>
      </div>
    </main>
<%- include('../partials/footer.ejs')%>